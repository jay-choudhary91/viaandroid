<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    android:layout_margin="@dimen/margin_30dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TRIM"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                app:fontType="bahnschrift_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:padding="@dimen/margin_10dp"
            android:gravity="center" >

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/black"
               />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp"
        android:orientation="vertical"
        android:gravity="center" >

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_purchase1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Purchase for $10/year"
            android:padding="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@drawable/round_corner_btn_allow"
            android:textColor="@color/white"
            />

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_purchase2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_5dp"
            android:text="Purchase for $10/month"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/round_corner_btn_allow"
            android:textSize="15sp"
            android:textColor="@color/white"
           />

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_upgradecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/round_corner_btn_allow"
            android:text="I have on upgrade code"
            android:textColor="@color/white"
            app:fontType="Comfortaa-Regular"/>

    </LinearLayout>

         <LinearLayout
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/btn_nothanks"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="No thank you"
                android:gravity="center"
                android:textColor="@color/grey_xx"
                app:fontType="Comfortaa-Regular"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:textSize="15dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>