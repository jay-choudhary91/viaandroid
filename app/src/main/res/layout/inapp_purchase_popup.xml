<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/popup_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TRIM"
                android:layout_margin="@dimen/margin_5dp"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                app:fontType="bahnschrift_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10dp"
                android:gravity="center" >

                <include layout="@layout/layout_justifytextsharepopup"/>
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:orientation="vertical"
        android:gravity="center" >

        <com.deeptruth.app.android.views.customfonttextview
            app:fontType="Comfortaa-Regular"
            android:id="@+id/tv_purchase1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:text="@string/purchase_for_peryear"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:background="@drawable/round_corner_btn_allow"
            android:textColor="@color/white"
            />

        <com.deeptruth.app.android.views.customfonttextview
            app:fontType="Comfortaa-Regular"
            android:id="@+id/tv_purchase2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp"
            android:text="@string/purchase_for_permonth"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:background="@drawable/round_corner_btn_allow"
            android:textSize="13sp"
            android:textColor="@color/white"
           />

        <com.deeptruth.app.android.views.customfonttextview
            app:fontType="Comfortaa-Regular"
            android:id="@+id/tv_upgradecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:background="@drawable/round_corner_btn_allow"
            android:text="@string/i_have_upgrade_code"
            android:textColor="@color/white"/>

    </LinearLayout>

         <LinearLayout
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/margin_5dp"
             android:layout_marginBottom="@dimen/margin_20dp"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="Comfortaa-Regular"
                android:id="@+id/btn_nothanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Thank You"
                android:gravity="center"
                android:textColor="@color/grey_xx"

                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>