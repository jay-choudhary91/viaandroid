<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundintro"
    tools:context=".activity.introscreenactivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.6"
            >

            <!-- <com.cryptoserver.composer.views.pagercustomduration
                 xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/viewpager_header"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="2"/>-->

            <com.deeptruth.app.android.views.pagercustomduration
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/viewpager_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.4"
            android:layout_height="0dp">


            <!--<com.cryptoserver.composer.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:id="@+id/btn_start_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_now"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_above="@+id/radioGroup"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:padding="@dimen/button_padding"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_corner_record_now"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="13sp"/>-->

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/btn_start_record"
                style="@style/tv_basic"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/record_now"
                android:textSize="17sp"
                android:visibility="gone"
                android:textColor="@color/white"
                app:fontType="OpenSans_BoldItalic"
                android:background="@drawable/round_corner_btn_allow"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtnOne"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/button_selector"
                    android:button="@null"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioBtnTwo"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_selector"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radioBtnThree"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/button_selector"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radioBtnfour"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_selector"
                    android:button="@null" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>