<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <com.cryptoserver.composer.views.customfonttextview
            app:fontType="OpenSans_Regular"
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="TextView" />

        <com.cryptoserver.composer.views.customfonttextview
            app:fontType="OpenSans_Regular"
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="TextView" />



    </LinearLayout>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0"></View>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.1">

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/btn_start_record"
            style="@style/tv_basic"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/record_now"
            android:textSize="17sp"
            android:visibility="invisible"
            android:textColor="@color/white"
            app:fontType="OpenSans_Regular"
            android:background="@drawable/round_corner_btn_allow"/>


    </LinearLayout>



</LinearLayout>