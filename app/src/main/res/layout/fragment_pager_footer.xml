<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:orientation="vertical">

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:minLines="2"
            app:fontType="OpenSans_Semibold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_descriptionone"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_10dp"
                style="@style/layout_introdiscription"
                android:justificationMode="inter_word"
                app:fontType="Comfortaa-Regular" />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_descriptiontwo"
                style="@style/layout_introdiscription"
                android:textColor="@color/white"
                android:justificationMode="inter_word"
                app:fontType="Comfortaa-Regular" />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_descriptionthree"
                style="@style/layout_introdiscription"
                android:textColor="@color/white"
                android:justificationMode="inter_word"
                app:fontType="Comfortaa-Regular"/>

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_descriptionfour"
                style="@style/layout_introdiscription"
                android:textColor="@color/white"
                android:justificationMode="inter_word"
                app:fontType="Comfortaa-Regular" />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_descriptionfive"
                style="@style/layout_introdiscription"
                android:textColor="@color/white"
                app:fontType="Comfortaa-Regular" />
        </LinearLayout>

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/btn_start_record"
            style="@style/tv_basic"
            android:layout_width="wrap_content"
            android:background="@drawable/round_corner_btn_allow"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:text="@string/record_now"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="gone"
            app:fontType="Comfortaa-Regular" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/layout_checkbox"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/showintroscreen_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:layout_gravity="left"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"></View>

</LinearLayout>