<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_rootview"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/action_bar_composer"></include>
    </LinearLayout>

    <com.cryptoserver.composer.utils.visualizeraudiorecorder
        android:id="@+id/myvisualizerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_header"
        android:background="@color/audio_composer_bg"/>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:gravity="center"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@drawable/gradient_fade_dark_blue"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/img_capture"
            android:src="@drawable/shape_recorder_off"
            />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="horizontal"
        android:layout_above="@id/layout_bottom"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/righthandle"
            />
        <LinearLayout
            android:id="@id/content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1"
            >

            <LinearLayout
                android:id="@+id/layout_drawer"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/whitetransparent"
                >


                <include layout="@layout/layout_drawer_content_composer"></include>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="wrap_content"
                android:src="@drawable/righthandle"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:id="@+id/righthandle"
                />
        </LinearLayout>


    </RelativeLayout>

    <com.cryptoserver.composer.views.customfonttextview
        android:id="@+id/txt_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        app:fontType="OpenSans_Regular"/>


</RelativeLayout>