<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_md"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_md"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/selectedicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_toRightOf="@id/img_md"
            android:layout_marginLeft="10dp"
            android:text="@string/md"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_md_salt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_md_salt"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/unselectedicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_toRightOf="@id/img_md_salt"
            android:layout_marginLeft="10dp"
            android:text="@string/md_salt"/>

        <EditText
            android:id="@+id/edt_md_salt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_edittext"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_sha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_sha"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/unselectedicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_toRightOf="@id/img_sha"
            android:layout_marginLeft="10dp"
            android:text="@string/sha"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_sha_salt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_sha_salt"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/unselectedicon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_toRightOf="@id/img_sha_salt"
            android:layout_marginLeft="10dp"
            android:text="@string/sha_salt"/>

        <EditText
            android:id="@+id/edt_sha_salt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_edittext"/>

    </RelativeLayout>


</LinearLayout>