<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:id="@+id/bottom_wraper"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#7000ADE5"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_slide_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/slide_share"
                    android:padding="10dp"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#9000ADE5"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_slide_create_dir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/slide_create_dir"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#00ADE5"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_slide_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/slide_delete"
                    android:padding="10dp"
                    android:gravity="left"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_rowfg"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_sharedeleteicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_shareicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/share_icon"
                    android:gravity="left"/>

                <ImageView
                    android:id="@+id/img_deleteicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/img_shareicon"
                    android:background="@drawable/delete_icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/rl_sharedeleteicon"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.35"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_videothumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:background="@color/dark_blue_solid"
                        />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/edt_videoname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:ems="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:inputType="none"
                        android:scrollHorizontally="false"
                        android:background="@drawable/edittext_shap"
                        android:textColor="@color/black"
                        android:visibility="visible"
                        android:imeOptions="actionDone"
                        />

                    <com.deeptruth.app.android.views.customfonttextview
                        app:fontType="OpenSans_Regular"
                        android:id="@+id/tv_videoname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="Video 1 Name"
                        android:visibility="gone"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <com.deeptruth.app.android.views.customfonttextview
                            app:fontType="OpenSans_Regular"
                            android:id="@+id/tv_mediadate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:text="xx-xx-xx"
                            />

                        <com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_pipesign"
                            app:fontType="OpenSans_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"
                            android:text="|"
                            />

                        <com.deeptruth.app.android.views.customfonttextview
                            app:fontType="OpenSans_Regular"
                            android:id="@+id/tv_mediatime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="5/31/2018"
                            />

                    </LinearLayout>


                    <com.deeptruth.app.android.views.customfonttextview
                        app:fontType="OpenSans_Regular"
                        android:id="@+id/tv_localkey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:visibility="gone"
                        android:textSize="13sp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/tv_videoduration"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:text=""
                        />

                    <com.deeptruth.app.android.views.customfonttextview
                        app:fontType="OpenSans_Regular"
                        android:id="@+id/tv_medianotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:text=""
                        />

                    <com.deeptruth.app.android.views.customfonttextview
                        app:fontType="OpenSans_Regular"
                        android:id="@+id/tv_sync_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="13sp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/tv_localkey"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_scanover"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-50dp"
            android:alpha="0.4"
            android:background="@drawable/gradient_verify_yellow"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:layout_below="@id/rl_rowfg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/uvv_light_gray"
            ></View>

    </RelativeLayout>

</RelativeLayout>