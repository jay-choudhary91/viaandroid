<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/bottom_wraper"
        android:layout_width="60dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:focusable="false"
            android:text="Edit"
            android:textColor="@color/white"/>

    </LinearLayout>

<RelativeLayout
    android:id="@+id/rl_rowfg"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_sharedeleteicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_shareicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_icon"
            android:gravity="left"/>

        <ImageView
            android:id="@+id/img_deleteicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img_shareicon"
            android:background="@drawable/delete_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/rl_sharedeleteicon"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/img_videothumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edt_videoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="15sp"
                android:ems="1"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:inputType="none"
                android:scrollHorizontally="false"
                android:background="@drawable/edittext_shap"
                android:textColor="@color/black"
                android:visibility="visible"
                android:imeOptions="actionDone"
                />

            <com.cryptoserver.composer.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:id="@+id/tv_videoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Video 1 Name"
                android:visibility="gone"
                />
            <com.cryptoserver.composer.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:id="@+id/tv_videocreatedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="13sp"
                android:layout_below="@+id/tv_videoname"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="5/31/2018"
                />
            <com.cryptoserver.composer.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:id="@+id/tv_videoduration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="13sp"
                android:layout_below="@+id/tv_videocreatedate"
                android:layout_marginTop="3dp"
                android:textColor="@color/lightblue"
                android:text="duration: 3:23"
                />
            <com.cryptoserver.composer.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:id="@+id/tv_videodescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tv_videoduration"
                android:textColor="@color/lightgray"
                android:maxLines="1"
                android:text="Its dummy text."
                />
        </LinearLayout>
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>