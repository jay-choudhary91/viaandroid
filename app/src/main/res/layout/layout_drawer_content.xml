<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="1dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/txt_slot1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/item_metrics"
                android:layout_marginLeft="1dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_slot2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/item_hashes"
                android:layout_marginLeft="1dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_slot3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/item_graphical"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/white"
                android:layout_height="match_parent" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <RadioButton android:id="@+id/radio_item_metrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_metrics"
                android:checked="true"/>

            <RadioButton android:id="@+id/radio_item_hashes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/item_hashes"/>

            <RadioButton android:id="@+id/radio_item_graphical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/item_graphical"/>

        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyview_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyview_metrices"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>