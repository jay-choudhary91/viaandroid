<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_videoaudiodata"
        android:layout_height="wrap_content">

        <com.deeptruth.app.android.views.customfonttextview
            style="@style/txt_normalview"
            android:text="@string/video_audio_data"
            android:paddingLeft="@dimen/margin_10dp"
            app:fontType="Comfortaa-Regular"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="match_parent">

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_videoaudiochart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:orientation="vertical"
                            android:gravity="right|center"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="bottom"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:background="@color/green_background">

                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="top"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:background="@color/yellow_background">

                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="top"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:background="@color/red_background">

                                </TextView>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <com.deeptruth.app.android.views.customfonttextview
                                style="@style/txt_pieview"
                                android:gravity="bottom"
                                android:layout_gravity="left"
                                android:layout_marginBottom="8dp"
                                app:fontType="Comfortaa-Regular"
                                android:text="@string/valid"

                                />
                            <com.deeptruth.app.android.views.customfonttextview
                                style="@style/txt_pieview"
                                android:gravity="center"
                                app:fontType="Comfortaa-Regular"
                                android:text="@string/caution"
                                />
                            <com.deeptruth.app.android.views.customfonttextview
                                style="@style/txt_pieview"
                                android:gravity="top"
                                android:layout_gravity="left"
                                app:fontType="Comfortaa-Regular"
                                android:layout_marginTop="8dp"
                                android:text="@string/invalid"
                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <com.deeptruth.app.android.views.customfonttextview
                                android:id="@+id/txt_videoaudio_validframes"
                                style="@style/txt_pieview"
                                android:text="0 Frames"
                                android:gravity="bottom"
                                android:layout_gravity="left"
                                android:layout_marginBottom="8dp"
                                app:fontType="Comfortaa-Regular"
                                />


                            <com.deeptruth.app.android.views.customfonttextview
                                android:id="@+id/txt_videoaudio_cautionframes"
                                style="@style/txt_pieview"
                                android:gravity="center"
                                app:fontType="Comfortaa-Regular"
                                android:text="0 Frames"
                                android:layout_gravity="left"
                                />


                            <com.deeptruth.app.android.views.customfonttextview
                                android:id="@+id/txt_videoaudio_invalidframes"
                                style="@style/txt_pieview"
                                android:text="0 Frames"
                                android:gravity="top"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="left"
                                app:fontType="Comfortaa-Regular"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/linear_mediavideoaudio"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"/>

            <com.deeptruth.app.android.views.customseekbar
                android:id="@+id/seekbar_mediavideoaudio"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:progressDrawable="@drawable/custom_drawer_media_seekbar"
                android:thumb="@drawable/custom_thumb" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_mediametadata"
        android:layout_height="match_parent">

        <com.deeptruth.app.android.views.customfonttextview
            style="@style/txt_normalview"
            android:text="@string/metadata"
            android:paddingLeft="@dimen/margin_10dp"
            app:fontType="Comfortaa-Regular"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="match_parent">

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_metadatachart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:orientation="vertical"
                            android:gravity="right|center"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="bottom"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:background="@color/green_background">

                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="top"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:background="@color/yellow_background">

                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:gravity="top"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:background="@color/red_background">

                                </TextView>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <com.deeptruth.app.android.views.customfonttextview
                                style="@style/txt_pieview"
                                android:gravity="bottom"
                                android:layout_gravity="left"
                                app:fontType="Comfortaa-Regular"
                                android:layout_marginBottom="8dp"
                                android:text="@string/valid"

                                />
                            <com.deeptruth.app.android.views.customfonttextview
                                style="@style/txt_pieview"
                                android:gravity="center"
                                app:fontType="Comfortaa-Regular"
                                android:text="@string/caution"
                                />
                            <com.deeptruth.app.android.views.customfonttextview
                                style="@style/txt_pieview"
                                android:gravity="top"
                                android:layout_gravity="left"
                                app:fontType="Comfortaa-Regular"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="@dimen/margin_5dp"
                                android:text="@string/invalid"
                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <com.deeptruth.app.android.views.customfonttextview
                                android:id="@+id/txt_meta_validframes"
                                style="@style/txt_pieview"
                                android:text="0 Frames"
                                android:gravity="bottom"
                                android:layout_gravity="left"
                                android:layout_marginBottom="8dp"
                                app:fontType="Comfortaa-Regular"
                                />


                            <com.deeptruth.app.android.views.customfonttextview
                                android:id="@+id/txt_meta_cautionframes"
                                style="@style/txt_pieview"
                                android:gravity="center"
                                app:fontType="Comfortaa-Regular"
                                android:text="0 Frames"
                                android:layout_gravity="left"
                                />


                            <com.deeptruth.app.android.views.customfonttextview
                                android:id="@+id/txt_meta_invalidframes"
                                style="@style/txt_pieview"
                                android:text="0 Frames"
                                android:gravity="top"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="left"
                                app:fontType="Comfortaa-Regular"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/linear_mediametadata"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"/>

            <com.deeptruth.app.android.views.customseekbar
                android:id="@+id/seekbar_mediametadata"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:progressDrawable="@drawable/custom_drawer_media_seekbar"
                android:thumb="@drawable/custom_thumb" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>