<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.deeptruth.app.android.views.customfonttextview
            style="@style/txt_normalview"
            android:text="@string/original_recording"
            android:id="@+id/txt_original_recording"
            app:fontType="OpenSans_Regular"
            android:textSize="13sp"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:text="@string/txt_start_time"
                app:fontType="OpenSans_Regular"
                android:textColor="@color/white"
                />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_start_time"
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:text=""
                app:fontType="OpenSans_Bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="@string/txt_end_time"
                android:layout_margin="2dp"
                android:textSize="10sp"
                app:fontType="OpenSans_Regular"
                android:textColor="@color/white"
                />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_end_time"
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:text=""
                app:fontType="OpenSans_Bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="@string/length"
                android:textSize="10sp"
                android:layout_margin="2dp"
                app:fontType="OpenSans_Regular"
                android:textColor="@color/white"
                />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_total_length"
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:text=""
                app:fontType="OpenSans_Bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="@string/frames_"
                android:textSize="10sp"
                android:layout_margin="2dp"
                app:fontType="OpenSans_Regular"
                android:textColor="@color/white"
                />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_total_frames"
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_margin="2dp"
                android:text=""
                android:textSize="10sp"
                app:fontType="OpenSans_Bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_height="180dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_videoaudiochart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="@string/gps_low_quality_"
                android:textSize="10sp"
                android:layout_margin="2dp"
                app:fontType="OpenSans_Regular"
                android:textColor="@color/white"
                />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_gps_low_quality"
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:text="0 Frames"
                app:fontType="OpenSans_Bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="@string/gps_no_signal"
                android:textSize="10sp"
                android:layout_margin="2dp"
                app:fontType="OpenSans_Regular"
                android:textColor="@color/white"
                />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_gps_no_signal"
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:text="0 Frames"
                app:fontType="OpenSans_Bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="@string/slowdata_connection"
                android:textSize="10sp"
                android:layout_margin="2dp"
                app:fontType="OpenSans_Regular"
                android:textColor="@color/white"
                />

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_slowdata_connection"
                style="@style/txt_normalview"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:text="0 Frames"
                app:fontType="OpenSans_Bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/linear_mediavideoaudio"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"/>

            <com.deeptruth.app.android.views.customseekbar
                android:id="@+id/seekbar_mediavideoaudio"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:progressDrawable="@drawable/custom_drawer_media_seekbar"
                android:thumb="@drawable/custom_thumb" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>