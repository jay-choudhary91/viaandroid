<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:id="@+id/rootview"
    android:layout_height="match_parent"
    android:background="@drawable/splashscrn"
    tools:context="com.deeptruth.app.android.fragments.fragmentsignin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_image"
            android:layout_gravity="bottom"
            android:gravity="bottom">
            <ImageView
                android:id="@+id/img_imagedeep"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/splash_logo_icon"
                />

          <!--  <ImageView
                android:id="@+id/img_imagetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:src="@drawable/deeptruth_text"/>

            <com.deeptruth.app.android.views.customfonttextview
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                android:text="@string/proof_of_the_truth"
                android:textSize="15dp"
                app:fontType="Comfortaa-Regular"
                android:textColor="@color/blue"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_logindetails"
            android:layout_below="@+id/layout_image"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:id="@+id/layout_signin"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <com.deeptruth.app.android.views.customfontedittext
                    style="@style/edt_login"
                    android:hint="@string/email"
                    app:fontType="Comfortaa-Regular"
                    android:background="@drawable/edittext_shap"
                    android:maxLength="50"
                    android:imeOptions="actionNext"
                    android:id="@+id/edt_username"/>

                <com.deeptruth.app.android.views.customfontedittext
                    style="@style/edt_login"
                    android:hint="@string/password"
                    android:imeOptions="actionDone"
                    android:maxLength="15"
                    android:inputType="textPassword"
                    android:layout_below="@id/edt_username"
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/edt_password"/>

                <com.deeptruth.app.android.views.customfonttextview
                    style="@style/txt_createaccount"
                    android:text="@string/login"
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/login"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_below="@+id/edt_password"/>

                <com.deeptruth.app.android.views.customfonttextview
                    style="@style/txt_createaccount"
                    android:text="@string/create_account"
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/createaccount"
                    android:layout_below="@+id/login"/>

                <com.deeptruth.app.android.views.customfonttextview
                    style="@style/txt_createaccount"
                    android:text="@string/forgot_password"
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/forgot_password"
                    android:layout_below="@+id/createaccount"/>


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>




</ScrollView>
