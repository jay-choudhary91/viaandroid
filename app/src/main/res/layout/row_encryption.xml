    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.cryptoserver.composer.views.customfonttextview
            app:fontType="OpenSans_Regular"
