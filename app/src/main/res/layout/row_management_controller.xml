<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_addSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_setting"
            android:padding="@dimen/margin_5dp"
            android:textColor="@color/heading_color"
            android:textSize="@dimen/bottom_nav_title_txt_size_14"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            app:fontType="OpenSans_Semibold"
            android:gravity="center"/>

        />


        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textSize="@dimen/header_text_size_18"
            android:textColor="@color/black"
            app:fontType="OpenSans_Semibold"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_addSetting" />


    </RelativeLayout>


</LinearLayout>