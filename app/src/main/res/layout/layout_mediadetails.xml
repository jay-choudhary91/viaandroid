<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/layout_mediadetails"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/tab_layout"
        android:visibility="gone"
        android:padding="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@drawable/roundcorner_btn"
        >

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/txt_slot4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            app:fontType="Comfortaa-Regular"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/leftround_btn"
            android:layout_height="match_parent" />

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/txt_slot5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/meta"
            app:fontType="Comfortaa-Regular"
            android:layout_marginLeft="1dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_btn"
            android:layout_height="match_parent" />

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/txt_slot6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/encyrption"
            android:gravity="center"
            app:fontType="Comfortaa-Regular"
            android:layout_marginLeft="1dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/rightround_btn"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_below="@+id/tab_layout"
        android:layout_above="@+id/layout_footer"
        android:id="@+id/scrollview_detail"
        android:scrollbars="none"
        android:visibility="visible"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">


                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_5dp"
                    app:fontType="OpenSans_Regular"
                    android:gravity="center_vertical"
                    android:text="@string/name"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:layout_marginRight="10dp"
                    android:padding="@dimen/margin_5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_bg"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_medianame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:inputType="none"
                        android:background="@null"
                        android:scrollHorizontally="false"
                        android:layout_toLeftOf="@+id/img_edit_name"
                        android:visibility="visible"
                        android:imeOptions="actionDone"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_edit_name"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_edit"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/layout_starttime"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    app:fontType="OpenSans_Regular"
                    android:gravity="center_vertical"
                    android:text="@string/start_time"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:id="@+id/txt_starttime"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    app:fontType="OpenSans_Regular"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:text=""
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/layout_endtime"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    app:fontType="OpenSans_Regular"
                    android:gravity="center_vertical"
                    android:text="@string/end_time"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:id="@+id/txt_endtime"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    app:fontType="OpenSans_Regular"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:text=""
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:id="@+id/layout_duration"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    app:fontType="OpenSans_Regular"
                    android:gravity="center_vertical"
                    android:text="@string/duration"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:id="@+id/txt_duration"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    app:fontType="OpenSans_Regular"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:text=""
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/layout_date"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    app:fontType="OpenSans_Regular"
                    android:gravity="center_vertical"
                    android:text="@string/date"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:id="@+id/txt_date"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    app:fontType="OpenSans_Regular"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:text=""
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:id="@+id/layout_time"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    app:fontType="OpenSans_Regular"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center_vertical"
                    android:text="@string/time"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:id="@+id/txt_time"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    app:fontType="OpenSans_Regular"
                    android:text=""
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center_vertical"
                    android:text="@string/size"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:id="@+id/txt_size"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    app:fontType="OpenSans_Regular"
                    android:text="100kb"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center_vertical"
                    android:text="@string/folder"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@id/spinner"
                        android:padding="6dp"
                        android:src="@drawable/dropdownicon"
                        />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_5dp"
                    android:gravity="center_vertical"
                    android:text="@string/notes"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.70"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:background="@drawable/edittext_bg">

                    <EditText
                        android:id="@+id/edt_medianotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/img_edit_notes"
                        android:gravity="left"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:isScrollContainer="true"
                        android:padding="@dimen/margin_5dp"
                        android:minHeight="70dp"
                        android:visibility="visible"
                        />

                     <ImageView
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_edit_notes"
                        android:layout_alignParentTop="true"
                         android:layout_centerInParent="true"
                        android:layout_margin="@dimen/margin_10dp"
                        android:src="@drawable/ic_edit"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

     <ScrollView
         android:id="@+id/scrollview_meta"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginLeft="@dimen/normal_margin_left"
         android:layout_marginRight="@dimen/normal_margin_right"
         android:layout_below="@+id/tab_layout"
         android:layout_above="@+id/layout_footer"
         android:scrollbars="none"
         android:visibility="gone"
         >

         <include layout="@layout/mediametainfo"/>

     </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollview_encyption"
        android:layout_marginLeft="@dimen/normal_margin_left"
        android:layout_marginRight="@dimen/normal_margin_right"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_below="@+id/tab_layout"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:visibility="gone">


        <include layout="@layout/layout_encryption_details"></include>

    </ScrollView>

</RelativeLayout>



