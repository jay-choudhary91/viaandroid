<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/layout_mediadetails"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:background="@drawable/bottomborder"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_10dp"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin_left"
            android:layout_marginRight="@dimen/normal_margin_right"
            android:id="@+id/img_share_media"
            android:background="@drawable/share_icon"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin_left"
            android:layout_marginRight="@dimen/normal_margin_right"
            android:layout_alignParentRight="true"
            android:background="@drawable/delete_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:padding="1dp"
        android:id="@+id/tab_layout"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/normal_margin_left"
        android:layout_marginRight="@dimen/normal_margin_right"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/blue">

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/txt_slot4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/photo"
            app:fontType="OpenSans_Regular"
            android:layout_marginLeft="1dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/white"
            android:layout_height="match_parent" />

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/txt_slot5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/meta"
            app:fontType="OpenSans_Regular"
            android:layout_marginLeft="1dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/white"
            android:layout_height="match_parent" />

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/txt_slot6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/encyrption"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            app:fontType="OpenSans_Regular"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@color/white"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/normal_margin_left"
        android:layout_marginRight="@dimen/normal_margin_right"
        android:layout_below="@+id/tab_layout"
        android:layout_above="@+id/layout_footer"
        android:id="@+id/scrollview_detail"
        android:scrollbars="none"
        android:visibility="gone"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_height="wrap_content">


                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    app:fontType="OpenSans_Regular"
                    android:gravity="center_vertical"
                    android:text="@string/name"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:padding="@dimen/margin_5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/actionbar_solid_normal_transparent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_medianame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:ems="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:inputType="none"
                        android:background="@null"
                        android:scrollHorizontally="false"
                        android:layout_toLeftOf="@+id/img_edit_name"
                        android:visibility="visible"
                        android:imeOptions="actionDone"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_edit_name"
                        android:layout_centerInParent="true"
                        android:src="@drawable/img_edit"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_height="15dp" />
                    <!--<EditText
                        android:layout_width="wrap_content"
                        android:layout_toLeftOf="@+id/img_edit"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content" />-->

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    app:fontType="OpenSans_Regular"
                    android:gravity="center_vertical"
                    android:text="@string/date"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    app:fontType="OpenSans_Semibold"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"

                    android:gravity="left"
                    android:text="10/10/2018"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    app:fontType="OpenSans_Regular"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/time"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    android:gravity="left"
                    app:fontType="OpenSans_Semibold"
                    android:text="3:47:08pm"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/size"
                    />
                <com.cryptoserver.composer.views.customfonttextview
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    android:gravity="left"
                    app:fontType="OpenSans_Semibold"
                    android:text="100kb"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/folder"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/actionbar_solid_normal_transparent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                         android:layout_toLeftOf="@id/spinner"
                        android:src="@drawable/img_downarrow"
                        />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_height="wrap_content">

                <com.cryptoserver.composer.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/notes"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.75"
                    android:background="@drawable/edittext_bg">

                    <EditText
                        android:id="@+id/edt_medianotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/img_edit_notes"
                        android:gravity="left"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:isScrollContainer="true"
                        android:padding="@dimen/margin_5dp"
                        android:minHeight="70dp"
                        android:visibility="visible"
                        />

                     <ImageView
                        android:layout_width="20dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_edit_notes"
                        android:layout_alignParentTop="true"
                         android:layout_marginLeft="@dimen/margin_5dp"
                         android:layout_marginRight="@dimen/margin_5dp"
                         android:layout_centerInParent="true"
                        android:layout_margin="@dimen/margin_5dp"
                        android:src="@drawable/img_edit"
                        android:layout_height="20dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

     <ScrollView
         android:id="@+id/scrollview_meta"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginLeft="@dimen/normal_margin_left"
         android:layout_marginRight="@dimen/normal_margin_right"
         android:layout_below="@+id/tab_layout"
         android:layout_above="@+id/layout_footer"
         android:scrollbars="none"
         android:visibility="gone"
         >

         <include layout="@layout/mediametainfo"/>

     </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollview_encyption"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/normal_margin_left"
        android:layout_marginRight="@dimen/normal_margin_right"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_below="@+id/tab_layout"
        android:scrollbars="none"
        android:layout_height="match_parent">


        <include layout="@layout/layout_encryption_details"></include>

    </ScrollView>

</RelativeLayout>



