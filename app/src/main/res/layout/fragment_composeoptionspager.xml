<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation"
        android:orientation="vertical">

    </FrameLayout>

    <com.deeptruth.app.android.views.customfonttextview
        android:id="@+id/txt_timer"
        app:fontType="OpenSans_Regular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="70sp"
        android:text=""/>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="visible"
        android:animateLayoutChanges="true"
        android:background="@drawable/gradient_fade_dark_blue"
        >
        <RelativeLayout
            android:id="@+id/layout_mediatype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.deeptruth.app.android.views.customfonttextview
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/txt_space_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    />

                <com.deeptruth.app.android.views.customfonttextview
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/txt_space_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    />

                <com.deeptruth.app.android.views.customfonttextview
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/txt_mediatype_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:text=""
                    />


                <com.deeptruth.app.android.views.customfonttextview
                    app:fontType="Comfortaa-Bold"
                    android:id="@+id/txt_mediatype_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:text=""
                    />


                <com.deeptruth.app.android.views.customfonttextview
                    app:fontType="Comfortaa-Regular"
                    android:id="@+id/txt_mediatype_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:text=""
                    />

            </LinearLayout>



        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_mediatype"
        android:clipToPadding="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_encryption"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:id="@+id/txt_encrypting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/encrypting"/>

        </RelativeLayout>



        <ImageView
            android:id="@+id/img_mediathumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/img_video_capture"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_rotate_camera"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:scaleType="matrix"
            android:src="@drawable/icon_cameraflip"/>

    </RelativeLayout>

    </RelativeLayout>


    <com.github.rongi.rotate_layout.layout.RotateLayout
        android:id="@+id/layout_no_gps_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:orientation="vertical"
        app:angle="0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/layout_no_gps_wifi"></include>


    </LinearLayout>

    </com.github.rongi.rotate_layout.layout.RotateLayout>

</RelativeLayout>