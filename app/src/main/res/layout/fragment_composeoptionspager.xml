<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation"
        android:orientation="vertical">

    </FrameLayout>

    <com.deeptruth.app.android.views.customfonttextview
        android:id="@+id/txt_timer"
        app:fontType="OpenSans_Regular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="70sp"
        android:text=""/>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:background="@drawable/gradient_fade_dark_blue"
        android:animateLayoutChanges="true"
        >
        <RelativeLayout
            android:id="@+id/layout_mediatype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="Comfortaa-Bold"
                android:id="@+id/txt_mediatype_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/wave_blue"
                android:text="PHOTO"
                />

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="Comfortaa-Regular"
                android:id="@+id/txt_mediatype_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="13sp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/txt_mediatype_b"
                android:textColor="@color/white"
                android:text="VIDEO"
                />


            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="Comfortaa-Regular"
                android:id="@+id/txt_mediatype_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/txt_mediatype_b"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="AUDIO"
                />

        </RelativeLayout>

        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/layout_mediatype"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_mediathumbnail"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_recorder"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:id="@+id/img_video_capture"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_rotate_camera"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_camera_flip_icon"
        />
        </RelativeLayout>
     </RelativeLayout>



    <LinearLayout
        android:id="@+id/layout_no_gps_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:orientation="vertical">

        <include layout="@layout/layout_no_gps_wifi"></include>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_validating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:shimmer_duration="2000"
            >

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_section_validating_secondary"
                app:fontType="OpenSans_Regular"
                style="@style/txt_no_gps_wifi"
                android:gravity="right|center_vertical"
                android:text="@string/validating"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:background="@color/red"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>



</RelativeLayout>