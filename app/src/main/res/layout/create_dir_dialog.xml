<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/round_corner"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Create folder"
            android:textSize="15dp"
            android:textColor="@color/black"
            app:fontType="OpenSans_Semibold"
            android:gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_inputdata_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edittext"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:hint="Enter folder name"
            android:maxLength="4"
            android:gravity="center"
            android:padding="5dp"
            android:layout_below="@+id/txt_title"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/grey_x"
            android:layout_marginTop="20dp"/>

        <com.cryptoserver.composer.views.customfonttextview
            android:id="@+id/tv_positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            app:fontType="OpenSans_Semibold"
            android:text="OK"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_negative"
            android:layout_toEndOf="@+id/tv_negative" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/lay_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:orientation="vertical">



    </LinearLayout>

</LinearLayout>