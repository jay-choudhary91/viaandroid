<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_key_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/setting"
            android:textSize="@dimen/header_text_size_18"
            android:textColor="@color/black"
            app:fontType="OpenSans_Semibold"
            android:gravity="center"/>

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_key_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/setting"
            android:textSize="@dimen/textsize12sp"
            android:textColor="@color/black"
            app:fontType="OpenSans_Regular"
            android:gravity="center"/>



    </LinearLayout>

</LinearLayout>