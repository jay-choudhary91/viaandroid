<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:id="@+id/scrollview_meta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_5dp"
        android:isScrollContainer="false"
        android:scrollbars="none"
        android:layout_marginTop="1dp"
        android:background="@drawable/popup_background"
        android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_8dp"
               >

                <com.deeptruth.app.android.views.customfonttextview
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/information_title"
                    app:fontType="Comfortaa-Regular"
                    android:textSize="@dimen/header_text_size_18"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <com.deeptruth.app.android.views.customfonttextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/discription_first"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:textSize="13sp"
                    app:fontType="Comfortaa-Regular"
                   />
                <com.deeptruth.app.android.views.customfonttextview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/discription_second"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:textSize="13sp"
                    app:fontType="Comfortaa-Regular"
                   />

                <include layout="@layout/subinfo_layout"></include>


            </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>