<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_request_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting"
            android:textSize="@dimen/textsize11sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:fontType="OpenSans_Regular"
            android:gravity="left"/>

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/tv_key_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting"
            android:textSize="@dimen/textsize11sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/wave_color"
            app:fontType="OpenSans_Regular"
            android:gravity="left"/>

    </LinearLayout>

</LinearLayout>