<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/drawer_frames"
    android:id="@+id/layout_timeinformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_timeinformation"
                style="@style/txt_drawer_graphical_title_big"
                android:text="TIME"
                app:fontType="OpenSans_Semibold"
                />

            <ImageView
                android:id="@+id/img_drawer_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_drawer_time"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.deeptruth.app.android.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    style="@style/txt_normalview"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:id="@+id/txt_phonetime"
                    android:text="@string/phone_time"/>

                <com.deeptruth.app.android.utils.AnalogClock
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/phone_time_clock_white"
                    android:layout_marginTop="0dp"
                    android:elevation="10dp"
                    app:showSecondHand="true"/>

                <com.deeptruth.app.android.utils.AnalogClockBlack
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/phone_time_clock_black"
                    android:layout_marginTop="5dp"
                    android:elevation="10dp"
                    app:showSecondHand="true"/>

                <com.deeptruth.app.android.views.customfonttextview
                    android:id="@+id/txt_phone_time"
                    app:fontType="OpenSans_Regular"
                    style="@style/txt_normalview"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text=""/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.deeptruth.app.android.views.customfonttextview
                    app:fontType="OpenSans_Regular"
                    style="@style/txt_normalview"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:id="@+id/txt_worldclocktime"
                    android:text="@string/world_clock_time"/>

                <com.deeptruth.app.android.utils.AnalogClock
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/world_time_clock_white"
                    android:elevation="10dp"
                    android:layout_marginTop="0dp"
                    app:showSecondHand="true"/>

                <com.deeptruth.app.android.utils.AnalogClockBlack
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/world_time_clock_black"
                    android:elevation="10dp"
                    android:layout_marginTop="5dp"
                    app:showSecondHand="true"/>

                <com.deeptruth.app.android.views.customfonttextview
                    android:id="@+id/txt_world_time"
                    app:fontType="OpenSans_Regular"
                    style="@style/txt_normalview"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>