<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundintro"
    android:focusableInTouchMode="true"
    android:id="@+id/listlayout">

    <RelativeLayout
        android:id="@+id/layout_mediatype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="@color/dark_blue_solid_a"
        android:orientation="horizontal">

        <include layout="@layout/action_bar_medialist"></include>

        <!--<RelativeLayout
            android:id="@+id/layout_sectionsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_actionbar"
            android:orientation="horizontal">

        </RelativeLayout>-->

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lay_grid_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_mediatype"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/lay_liststyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_gallerylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_list_view" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_gridstyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_gridlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_grid_view" />

        </RelativeLayout>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_medialist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@id/lay_grid_list_type"
        >

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_medialist_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="-2dp"
        android:visibility="gone"
        android:layout_below="@id/lay_grid_list_type">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>