<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_section_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_warning"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_warning"/>

        <com.cryptoserver.composer.views.customfonttextview
            app:fontType="OpenSans_Regular"
            style="@style/txt_no_gps_wifi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_warning"
            android:text="@string/no_gps_wifi"/>

    </RelativeLayout>

    <com.cryptoserver.composer.views.customfonttextview
        android:id="@+id/txt_section_validating"
        app:fontType="OpenSans_Regular"
        style="@style/txt_no_gps_wifi"
        android:gravity="right|center_vertical"
        android:text="@string/validating"
        android:paddingRight="10dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/gradient_validate_wifi_gps_yellow"/>


</LinearLayout>