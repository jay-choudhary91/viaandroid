<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_textsection"
        android:layout_height="40dp">

        <include layout="@layout/layout_validating"></include>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.deeptruth.app.android.views.customfonttextview
            app:fontType="OpenSans_Semibold"
            android:id="@+id/txt_encrypting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="right|center_vertical"
            android:text="@string/encrypting"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"/>

        <ImageView
            android:id="@+id/img_gpswifiwarning"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/warning_icon"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close"/>


    </RelativeLayout>





</LinearLayout>