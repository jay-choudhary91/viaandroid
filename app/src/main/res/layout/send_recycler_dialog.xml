<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:paddingRight="@dimen/margin_10dp"
    android:paddingLeft="@dimen/margin_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="22dp"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="10dp"
            card_view:cardBackgroundColor="@android:color/white">

            <ImageView
                android:id="@+id/img_send_dialog"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/dropbox"
                android:background="@color/transparent"
                android:scaleType="centerCrop"/>

        </android.support.v7.widget.CardView>

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/txt_send_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dropbox"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            app:fontType="Comfortaa-Regular"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>