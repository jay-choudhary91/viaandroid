<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:content="@+id/content"
        android:fitsSystemWindows="true"
        android:handle="@+id/handle"
        android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/layout_videoreader"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:id="@+id/layout_footer"
                    android:layout_width="match_parent"
                    android:background="@drawable/bottomborder"
                    android:layout_gravity="bottom|end"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin_left"
                        android:layout_marginRight="@dimen/normal_margin_right"
                        android:id="@+id/img_share_media"
                        android:visibility="visible"
                        android:background="@drawable/share"/>

                    <ImageView
                        android:id="@+id/img_delete_media"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin_left"
                        android:layout_marginRight="@dimen/normal_margin_right"
                        android:layout_alignParentRight="true"
                        android:visibility="visible"
                        android:background="@drawable/garbage"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/layout_footer"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/layout_halfscrnimg"
                        android:layout_weight="1.2">

                        <FrameLayout
                            android:id="@+id/videoSurfaceContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextureView
                                android:id="@+id/videotextureview"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                        </FrameLayout>

                        <com.cryptoserver.composer.utils.circularImageview
                            android:id="@+id/btn_playpause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/description"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/img_fullscreen"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                           android:layout_above="@+id/layout_customcontroller"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_full_screen_mode"
                            android:padding="10dp"
                            />

                        <LinearLayout
                            android:id="@+id/layout_customcontroller"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/scrub_layout"
                                >

                                <RelativeLayout
                                    android:id="@+id/layout_scrubberview"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:visibility="visible"
                                    android:layout_marginLeft="@dimen/margin_15dp"
                                    android:layout_marginRight="@dimen/margin_15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="false">

                                    <com.cryptoserver.composer.utils.NoScrollRecycler
                                        android:id="@+id/recyview_frames"
                                        android:layout_width="match_parent"
                                        android:visibility="visible"
                                        android:layout_marginTop="5dp"
                                        android:overScrollMode="never"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_height="wrap_content"/>

                                    <RelativeLayout
                                        android:layout_width="20dp"
                                        android:id="@+id/scrubberverticalbar"
                                        android:layout_centerHorizontal="true"
                                        android:background="@color/whitetransparent"
                                        android:layout_marginLeft="@dimen/margin_15dp"
                                        android:layout_marginRight="@dimen/margin_15dp"
                                        android:visibility="gone"
                                        android:layout_height="50dp">

                                        <View
                                            android:layout_width="2dp"
                                            android:background="@color/blue_button"
                                            android:visibility="gone"
                                            android:layout_centerHorizontal="true"
                                            android:layout_height="50dp">

                                        </View>


                                    </RelativeLayout>

                                </RelativeLayout>

                                    <com.cryptoserver.composer.views.customseekbar
                                        android:id="@+id/mediacontroller_progress"
                                        android:layout_width="match_parent"
                                        android:layout_centerInParent="true"
                                        android:progressDrawable="@drawable/custom_seekbar"
                                        android:layout_height="30dip"
                                        android:thumb="@drawable/custom_thumb"
                                        android:layout_below="@+id/layout_scrubberview"
                                        android:layout_marginLeft="@dimen/margin_15dp"
                                        android:layout_marginRight="@dimen/margin_15dp"
                                        />

                                    <RelativeLayout
                                        android:id="@+id/layout_progressline"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:visibility="visible"
                                        android:layout_above="@id/mediacontroller_progress"
                                        android:orientation="vertical">

                                        <com.cryptoserver.composer.views.customfonttextview
                                            android:id="@+id/txt_mediatimethumb"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            android:textSize="10sp"
                                            android:padding="2dp"
                                            android:visibility="invisible"
                                            android:background="@color/white"
                                            android:singleLine="true"
                                            android:maxLines="1"
                                            android:gravity="center_horizontal"
                                            app:fontType="OpenSans_Regular" />

                                        <RelativeLayout
                                            android:layout_width="4dp"
                                            android:layout_height="50dp"
                                            android:gravity="center"
                                            android:background="@color/white"
                                            android:layout_centerHorizontal="true"
                                            android:layout_below="@id/txt_mediatimethumb"
                                            android:orientation="vertical">

                                            <View
                                                android:id="@+id/view_progressline"
                                                android:layout_width="2dp"
                                                android:layout_height="45dp"
                                                android:layout_centerHorizontal="true"
                                                android:background="@color/black"></View>

                                        </RelativeLayout>

                                    </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:id="@+id/layout_seekbartiming"
                                    android:layout_below="@+id/mediacontroller_progress"
                                    android:visibility="visible"
                                    android:layout_height="wrap_content">
                                    <View
                                        android:layout_width="match_parent"
                                        android:background="@color/uvv_gray"
                                        android:id="@+id/dividerline"
                                        android:visibility="gone"
                                        android:layout_height="1dp"/>

                                    <com.cryptoserver.composer.views.customfonttextview
                                        android:id="@+id/time_current"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="@dimen/margin_15dp"
                                        android:layout_toRightOf="@+id/img_volume"
                                        android:paddingLeft="0dip"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        app:fontType="OpenSans_Regular" />


                                    <com.cryptoserver.composer.views.customfonttextview
                                        android:id="@+id/time"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        app:fontType="OpenSans_Regular"
                                        android:paddingRight="0dip"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="@dimen/margin_15dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:paddingLeft="4dip" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:visibility="visible"
                                    android:id="@+id/layoutpause"
                                    android:padding="5dp"
                                    android:layout_below="@+id/layout_seekbartiming"
                                    android:layout_height="wrap_content">

                                    <ImageButton
                                        android:id="@+id/img_pause"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:padding="10dp"
                                        android:layout_margin="5dp"
                                        android:background="@drawable/pause_btn_icon"
                                        android:paddingLeft="10dip"
                                        android:layout_centerInParent="true"
                                        android:paddingRight="4dip"
                                        android:visibility="visible" />
                                </RelativeLayout>

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/tab_photoreader"
                        android:layout_weight="0.8"
                        android:visibility="visible"
                        android:id="@+id/layout_videodetails"
                        android:layout_height="0dp">
                        <include layout="@layout/layout_mediadetails"></include>
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_mediatype"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_alignParentTop="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/action_bar_mediadetails"></include>


                </RelativeLayout>

            </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>