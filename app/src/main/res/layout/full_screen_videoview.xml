<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:layout_centerVertical="true">

        <com.cryptoserver.composer.utils.FullDrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:openDrawer="start" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/layout_videoreader"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:id="@+id/layout_footer"
                    android:layout_width="match_parent"
                    android:background="@drawable/bottomborder"
                    android:layout_gravity="bottom|end"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="visible"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin_left"
                        android:layout_marginRight="@dimen/normal_margin_right"
                        android:id="@+id/img_share_media"
                        android:background="@drawable/share"/>

                    <ImageView
                        android:id="@+id/img_delete_media"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/normal_margin_left"
                        android:layout_marginRight="@dimen/normal_margin_right"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/garbage"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/layout_footer"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/layout_mediatype"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/action_bar_mediadetails"></include>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/layout_halfscrnimg"
                        android:layout_weight="1">

                        <FrameLayout
                            android:id="@+id/videoSurfaceContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <SurfaceView
                                android:id="@+id/videoSurface"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>

                        <com.cryptoserver.composer.utils.circularImageview
                            android:id="@+id/btn_playpause"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/description"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            />

                        <ImageView
                            android:id="@+id/img_fullscreen"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_full_screen_mode"
                            android:padding="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout_customcontroller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            >

                            <ImageButton android:id="@+id/img_volume"
                                android:layout_marginTop="-7dp"
                                android:paddingTop="4dip"
                                android:paddingBottom="4dip"
                                android:paddingLeft="10dip"
                                android:paddingRight="4dip"
                                android:visibility="gone"
                                android:layout_gravity="top"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/volumeadjustment"
                                android:contentDescription="@string/description" />

                            <RelativeLayout
                                android:id="@+id/layout_scrubberview"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:visibility="visible"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="false">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recyview_frames"
                                    android:layout_width="match_parent"
                                    android:visibility="visible"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"/>

                                <RelativeLayout
                                    android:layout_width="20dp"
                                    android:id="@+id/scrubberverticalbar"
                                    android:layout_centerHorizontal="true"
                                    android:background="@color/whitetransparent"
                                    android:visibility="gone"
                                    android:layout_height="50dp">

                                    <View
                                        android:layout_width="2dp"
                                        android:background="@color/blue_button"
                                        android:visibility="gone"
                                        android:layout_centerHorizontal="true"
                                        android:layout_height="50dp">

                                    </View>


                                </RelativeLayout>

                            </RelativeLayout>

                            <SeekBar
                                android:id="@+id/mediacontroller_progress"
                                android:layout_width="match_parent"
                                android:layout_centerInParent="true"
                                android:progressDrawable="@drawable/custom_seekbar"
                                android:layout_below="@+id/layout_scrubberview"
                                android:layout_height="30dip"
                                android:thumb="@drawable/custom_thumb"/>


                            <com.cryptoserver.composer.views.customfonttextview
                                android:id="@+id/time_current"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@id/mediacontroller_progress"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/img_volume"
                                android:paddingLeft="4dip"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontType="OpenSans_Regular" />


                            <com.cryptoserver.composer.views.customfonttextview
                                android:id="@+id/time"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontType="OpenSans_Regular"
                                android:layout_below="@+id/mediacontroller_progress"
                                android:paddingRight="4dip"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:paddingLeft="4dip" />

                            <ImageButton
                                android:id="@+id/img_pause"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_below="@+id/mediacontroller_progress"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="top"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/pause_btn_icon"
                                android:paddingBottom="4dip"
                                android:paddingLeft="10dip"
                                android:paddingRight="4dip"
                                android:paddingTop="4dip"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/tab_photoreader"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:id="@+id/layout_videodetails"
                        android:layout_height="0dp">
                        <include layout="@layout/layout_mediadetails"></include>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:content="@+id/content"
                        android:handle="@+id/handle"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@id/handle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/righthandle"
                            android:visibility="gone"
                            />
                        <LinearLayout
                            android:id="@id/content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1"
                            >

                            <LinearLayout
                                android:id="@+id/layout_drawer"
                                android:layout_width="0dp"
                                android:layout_weight="0.9"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:background="@color/whitetransparent"
                                >

                                <include layout="@layout/layout_drawer_content"></include>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight=".1"
                                android:layout_height="wrap_content"
                                android:src="@drawable/righthandle"
                                android:visibility="gone"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/righthandle"
                                />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_lefthandle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_arrow_left"
                    />


            </RelativeLayout>

            <android.support.design.widget.NavigationView
                android:id="@+id/navigation_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blacktransparent"
                android:visibility="gone"
                android:fitsSystemWindows="true"
                android:layout_gravity="start"
                >

                <include
                    layout="@layout/layout_graphical_drawer_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </include>

            </android.support.design.widget.NavigationView>

        </com.cryptoserver.composer.utils.FullDrawerLayout>

    </RelativeLayout>
</RelativeLayout>
