<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:id="@+id/img_cancelicon"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:background="@drawable/error"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/txt_title1"
            app:fontType="OpenSans_Regular"
            style="@style/txt_share_screen"
            android:visibility="gone"
            android:text="@string/video_has_been_encrypted" />

        <com.deeptruth.app.android.views.customfonttextview
            android:id="@+id/txt_title2"
            app:fontType="OpenSans_Regular"
            style="@style/txt_share_screen"
            android:visibility="gone"
            android:text="@string/congratulations_video" />

        <LinearLayout
            android:id="@+id/linear_share_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/layout_share_screen">

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:text="@string/str_private"
                style="@style/btn_share_screen"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_share_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/layout_share_screen">

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:text="@string/str_public"
                style="@style/btn_share_screen"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_share_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/layout_share_screen">

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:text="@string/str_direct_link"
                style="@style/btn_share_screen"    />


        </LinearLayout>


        <!--<LinearLayout
            android:id="@+id/linear_share_btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/layout_share_screen">

            <ImageView
                android:id="@+id/img_lock_trimmer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:src="@drawable/lock_icon"
                />

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="OpenSans_Regular"
                android:text="@string/str_trim_share"
                android:layout_marginLeft="5dp"
                style="@style/btn_share_screen"
                />

        </LinearLayout>-->

    </LinearLayout>

</LinearLayout>
