<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/layout_googlemap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_locationtracking"
                style="@style/txt_drawer_graphical_title"
                android:text="@string/locationinformation"
                app:fontType="Comfortaa-Regular"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="visible"
                >

                <FrameLayout
                    android:id="@+id/googlemap"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:layout_height="200dp"/>

                <com.deeptruth.app.android.views.customfonttextview
                    android:id="@+id/txt_address"
                    app:fontType="Comfortaa-Regular"
                    style="@style/txt_normalview"
                    android:layout_marginTop="5dp"
                    android:text="X-Axis"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_locationanalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_locationanalytics"
                style="@style/txt_drawer_graphical_title"
                android:text="@string/locationanalytics"
                app:fontType="Comfortaa-Regular"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_marginTop="5dp"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/layout_compass"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_above="@+id/txt_degree"
                        android:layout_height="150dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:id="@+id/layoutcompass"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/img_compass">
                        </ImageView>

                        <ImageView
                            android:id="@+id/img_niddle"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:visibility="visible"
                            android:src="@drawable/niddle_withshadow" />

                    </RelativeLayout>
                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_degree"
                        app:fontType="Comfortaa-Regular"
                        style="@style/txt_degreeview"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:text="Degree"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_heading"
                            app:fontType="OpenSans_Regular"
                            android:gravity="center"
                            style="@style/txt_row_locationinfo"
                            android:layout_weight="0.3"
                            android:text="Heading"/>

                        <com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_latitude"
                            app:fontType="OpenSans_Regular"
                            style="@style/txt_row_locationinfo"
                            android:gravity="center"
                            android:layout_weight="0.3"
                            android:text="Latitude"/>

                        <com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_longitude"
                            app:fontType="OpenSans_Regular"
                            style="@style/txt_row_locationinfo"
                            android:gravity="center"
                            android:layout_weight="0.3"
                            android:text="Longitude"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <!--<com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_heading"
                            app:fontType="OpenSans_Regular"
                            android:gravity="left"
                            style="@style/txt_row_encryption"
                            android:layout_weight="0.5"
                            android:text="Heading"/>-->



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_speed"
                        app:fontType="OpenSans_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="Speed"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart_speed"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="70dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_traveled"
                        app:fontType="OpenSans_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Traveled"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart_traveled"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="70dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_altitude"
                        app:fontType="OpenSans_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="Altitude"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart_altitude"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="70dp"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_gps_accuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontType="OpenSans_Regular"
                android:gravity="center"
                android:textColor="@color/white"
                android:text=""/>

            <include layout="@layout/row_gpsaccuracy"></include>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_timeinformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_timeinformation"
                style="@style/txt_drawer_graphical_title"
                android:text="@string/timeinformation"
                app:fontType="Comfortaa-Regular"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.deeptruth.app.android.views.customfonttextview
                        app:fontType="Comfortaa-Regular"
                        style="@style/txt_normalview"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/phone_time"/>

                    <com.deeptruth.app.android.utils.AnalogClock
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:id="@+id/phone_time_clock"
                        android:layout_marginTop="10dp"
                        android:elevation="10dp"
                        app:showSecondHand="true"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_phone_time"
                        app:fontType="Comfortaa-Regular"
                        style="@style/txt_normalview"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text=""/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.deeptruth.app.android.views.customfonttextview
                        app:fontType="Comfortaa-Regular"
                        style="@style/txt_normalview"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="@string/world_clock_time"/>

                    <com.deeptruth.app.android.utils.AnalogClock
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:id="@+id/world_time_clock"
                        android:elevation="10dp"
                        android:layout_marginTop="10dp"
                        app:showSecondHand="true"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_world_time"
                        app:fontType="Comfortaa-Regular"
                        style="@style/txt_normalview"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_orientationanalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_drawer_graphical_title"
                android:id="@+id/txt_orientation"
                android:text="@string/phoneinformation"
                app:fontType="Comfortaa-Regular"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:gravity="right"
                    android:layout_weight="0.5">

                    <com.deeptruth.app.android.sensor.AttitudeIndicator
                        android:id="@+id/attitude_indicator"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/img_phone_orientation"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/phoneorentation"/>


                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/cordinatesxyz" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:orientation="vertical">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_xaxis"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_normalview"
                        android:gravity="center"
                        android:layout_weight="0.2"
                        android:text="X-Axis"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_yaxis"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_normalview"
                        android:gravity="center"
                        android:layout_weight="0.2"
                        android:text="Y-Axis"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_zaxis"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_normalview"
                        android:gravity="center"
                        android:layout_weight="0.2"
                        android:text="Z-Axis"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_phoneanalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:orientation="vertical">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_drawer_graphical_title"
                android:id="@+id/txt_Phoneanalytics"
                app:fontType="Comfortaa-Regular"
                android:visibility="gone"
                android:text="@string/Phoneanalytics" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.deeptruth.app.android.views.customfonttextview
                            app:fontType="OpenSans_Regular"
                            android:id="@+id/txt_Memory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="@dimen/margin_15dp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="Memory Usage"/>


                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart_memoeyusage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/txt_Memory"/>


                        <com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_memoryusage"
                            app:fontType="OpenSans_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:layout_alignParentBottom="true"
                           />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.deeptruth.app.android.views.customfonttextview
                            app:fontType="OpenSans_Regular"
                            android:id="@+id/txt_cpuusage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="@dimen/margin_15dp"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:text="CPU Usage"/>


                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart_cpuusage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/txt_cpuusage"/>


                        <com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_cpu_usage"
                            app:fontType="OpenSans_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.deeptruth.app.android.views.customfonttextview
                            app:fontType="OpenSans_Regular"
                            android:id="@+id/txtbattery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="@dimen/margin_15dp"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:text="Battery"/>


                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart_battery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/txtbattery"/>


                        <com.deeptruth.app.android.views.customfonttextview
                            android:id="@+id/txt_battery"
                            app:fontType="OpenSans_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:layout_alignParentBottom="true"
                            />

                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_phone"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:text="Phone"/>


                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_version"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:text="Version"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_language"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:text="language"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_country"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginTop="5dp"
                        android:text="Country"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_network"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:layout_weight="0.5"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Network"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_wifi"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginTop="5dp"
                        android:text="WiFi"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_storagefree"
                        app:fontType="OpenSans_Regular"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        style="@style/txt_row_encryption"
                        android:layout_weight="0.5"
                        android:text="Storage Free"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_screen"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginTop="5dp"
                        android:text="Screen"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_brightness"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginTop="5dp"
                        android:text="Brightness"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_localtime"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:text="localtime"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_timezone"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_marginTop="5dp"
                        android:text="Time Zone"/>

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_uptime"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:text="Phone UpTime"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_bluetooth"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:text="Bluetooth"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <com.deeptruth.app.android.views.customfonttextview
                        android:id="@+id/txt_availablewifinetwork"
                        app:fontType="OpenSans_Regular"
                        style="@style/txt_row_encryption"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:text="@string/availablewifinetwork"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <com.deeptruth.app.android.views.customfonttextview
                android:id="@+id/txt_mediainformation"
                style="@style/txt_drawer_graphical_title"
                android:text="@string/media_information"
