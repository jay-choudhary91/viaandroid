<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <com.deeptruth.app.android.views.customfonttextview
        android:id="@+id/text_encryption"
        app:fontType="Comfortaa-Regular"
        style="@style/txt_drawer_graphical_title"
        android:text="@string/encryption_information" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                app:fontType="Comfortaa-Regular"
                style="@style/txt_row_encryption"
                android:layout_weight="0.3"
                android:id="@+id/txt_videoupdatetransactionid"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.3"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_row_encryption"
                android:id="@+id/txt_hash_formula"
                android:layout_weight="0.3"
                app:fontType="Comfortaa-Regular"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_row_encryption"
                android:id="@+id/txt_data_hash"
                android:layout_weight="0.3"
                app:fontType="Comfortaa-Regular"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_weight="0.3"
            android:layout_height="wrap_content">

            <com.deeptruth.app.android.views.customfonttextview
                style="@style/txt_row_encryption"
                android:id="@+id/txt_dictionary_hash"
                app:fontType="Comfortaa-Regular"
                android:layout_weight="0.3"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_datalatency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:orientation="vertical">

                <com.deeptruth.app.android.views.customfonttextview
                    android:id="@+id/text_dataletency"
                    app:fontType="OpenSans_Regular"
                    style="@style/txt_drawer_graphical_title"
                    android:text="@string/type_of_chart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/linechart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
