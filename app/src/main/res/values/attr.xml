<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="customfonttextview">
        <attr name="fontType">
            <enum name="OpenSans_Bold" value="0" />
            <enum name="OpenSans_BoldItalic" value="1" />
            <enum name="OpenSans_ExtraBold" value="2" />
            <enum name="OpenSans_ExtraBoldItalic" value="3" />
            <enum name="OpenSans_Italic" value="4" />
            <enum name="OpenSans_light" value="5" />
            <enum name="OpenSans_LightItalic" value="6" />
            <enum name="OpenSans_Regular" value="7" />
            <enum name="OpenSans_Semibold" value="8" />
            <enum name="OpenSans_SemiboldItalic" value="9" />
            <enum name="Comfortaa-Bold" value="10" />
            <enum name="Comfortaa-Light" value="11" />
            <enum name="Comfortaa-Regular" value="12" />
            <enum name="bahnschrift_regular" value="13" />
            <enum name="bahnschrift_light" value="14" />

        </attr>
    </declare-styleable>
    <declare-styleable name="Pinview">
        <attr name="pinBackground" format="reference"/>
        <attr name="pinLength" format="integer"/>
        <attr name="pinWidth" format="dimension"/>
        <attr name="pinHeight" format="dimension"/>
        <attr name="splitWidth" format="dimension"/>
        <attr name="cursorVisible" format="boolean"/>
        <attr name="password" format="boolean"/>
        <attr name="forceKeyboard" format ="boolean"/>
        <attr name="hint" format="string"/>
        <attr name="inputType"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>
    <attr name="inputType" format="enum">
        <enum name="text" value="0"/>
        <enum name="number" value="1"/>
    </attr>
</resources>