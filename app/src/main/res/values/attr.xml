<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="customfonttextview">
        <attr name="fontType">
            <enum name="OpenSans_Bold" value="0" />
            <enum name="OpenSans_Regular" value="1" />
            <enum name="OpenSans_Semibold" value="2" />
            <enum name="Comfortaa-Bold" value="3" />
            <enum name="Comfortaa-Light" value="4" />
            <enum name="Comfortaa-Regular" value="5" />
            <enum name="bahnschrift_regular" value="6" />
            <enum name="bahnschrift_light" value="7" />
            <enum name="arial_narrow_bold" value="8" />


        </attr>
    </declare-styleable>
    <declare-styleable name="Pinview">
        <attr name="pinBackground" format="reference"/>
        <attr name="pinLength" format="integer"/>
        <attr name="pinWidth" format="dimension"/>
        <attr name="pinHeight" format="dimension"/>
        <attr name="splitWidth" format="dimension"/>
        <attr name="cursorVisible" format="boolean"/>
        <attr name="password" format="boolean"/>
        <attr name="forceKeyboard" format ="boolean"/>
        <attr name="hint" format="string"/>
        <attr name="inputType"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>
    <attr name="inputType" format="enum">
        <enum name="text" value="0"/>
        <enum name="number" value="1"/>
    </attr>
</resources>