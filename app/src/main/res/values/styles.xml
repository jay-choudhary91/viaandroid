<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_blue_solid_a</item>
        <item name="colorPrimaryDark">@color/dark_blue_solid_a</item>
        <item name="colorAccent">@color/dark_blue_solid_a</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/dark_blue_solid_a</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">never</item>
    </style>

    <style name="textview">
        <item name="android:inputType">number</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_drawer">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <!--<item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>-->
    </style>

    <style name="tv_basic">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="txt_share_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_drawer_graphical_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_drawer_graphical_title_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="drawer_frames">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/border_drawer_container</item>
    </style>

    <style name="txt_drawer_graphical_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_row_encryption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/encrypt_row_color</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_row_locationinfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/encrypt_row_color</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_row_orientationinfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/encrypt_row_color</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_normalview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_satellite_items">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txt_xapi_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="txt_pieview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txt_degreeview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="txt_no_gps_wifi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="txt_check_gps_wifi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="btn_share_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layout_share_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25sp</item>
        <item name="android:layout_marginRight">25sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="btn_settings_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/btn_background</item>

    </style>

    <style name="img_settings_screen">
        <item name="android:layout_marginRight">@dimen/img_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/img_margin_left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>

    </style>
    <style name="customdialogtheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/black</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MaterialTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen" />

    <style name="edt_login">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_50dp</item>
        <item name="android:layout_marginRight">@dimen/margin_50dp</item>
        <item name="android:layout_marginTop">@dimen/margin_15dp</item>
        <item name="android:background">@drawable/edittext_shap</item>

    </style>

    <style name="edt_createaccount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_30dp</item>
        <item name="android:layout_marginRight">@dimen/margin_30dp</item>
        <item name="android:layout_marginTop">@dimen/margin_15dp</item>
        <item name="android:background">@drawable/edittext_shap</item>
    </style>

    <style name="edt_codebox">
        <item name="android:layout_width">@dimen/margin_40dp</item>
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/style_rounded</item>
        <item name="android:padding">3dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txt_createaccount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="txt_submit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">@dimen/margin_30dp</item>
        <item name="android:layout_marginRight">@dimen/margin_30dp</item>
        <item name="android:layout_marginTop">@dimen/margin_15dp</item>
    </style>

    <style name="edt_createaccount_withoutbackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/edittext_shap</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:progressDrawable">@drawable/indeterminate_progress_drawable</item>
        <item name="android:indeterminateDrawable">@drawable/indeterminate_animation_progress</item>
    </style>

</resources>
